# =============================================================================
# ClickUp Field Updater - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in the values for your environment.
# Required variables are marked with [REQUIRED], optional ones with [OPTIONAL].
# =============================================================================

# -----------------------------------------------------------------------------
# ClickUp API Configuration
# -----------------------------------------------------------------------------

# [REQUIRED] ClickUp Personal API Token
# Obtain from: ClickUp > Settings > Apps > API Token
# Format: pk_xxxxxxxx_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TOKEN_CLICKUP=pk_xxxxxxxx_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# [REQUIRED] Internal API Authentication Token
# Used for external API access via header: Authorization: Bearer {TOKEN_API}
# Generate a secure random string (minimum 32 characters recommended)
TOKEN_API=your_secure_api_token_here

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# [OPTIONAL] Backend server port (default: 8080)
PORT=8080

# [OPTIONAL] Backend port for docker-compose (default: 8080)
BACKEND_PORT=8080

# [OPTIONAL] Frontend port for docker-compose (default: 3000)
FRONTEND_PORT=3000

# [OPTIONAL] Gin framework mode: debug, release, test (default: release)
GIN_MODE=release

# [OPTIONAL] Timezone (default: America/Sao_Paulo)
TZ=America/Sao_Paulo

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# [OPTIONAL] Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# [OPTIONAL] Enable JSON formatted logs: true, false (default: true)
LOG_JSON=true

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# [REQUIRED for Production] Encryption key for sensitive data (32 bytes)
# Generate with: openssl rand -base64 32
# WARNING: Changing this will invalidate all encrypted tokens in the database
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------

# [OPTIONAL] Database host (default: localhost, use 'postgres' for docker-compose)
DB_HOST=localhost

# [OPTIONAL] Database port (default: 5432)
DB_PORT=5432

# [OPTIONAL] Database user (default: postgres)
DB_USER=postgres

# [REQUIRED for Production] Database password
DB_PASSWORD=postgres

# [OPTIONAL] Database name (default: clickup_updater)
DB_NAME=clickup_updater

# [OPTIONAL] SSL mode: disable, require, verify-ca, verify-full (default: disable)
DB_SSLMODE=disable

# -----------------------------------------------------------------------------
# Database Connection Pool Configuration
# -----------------------------------------------------------------------------

# [OPTIONAL] Maximum number of open connections (default: 25)
DB_MAX_OPEN_CONNS=25

# [OPTIONAL] Maximum number of idle connections (default: 10)
DB_MAX_IDLE_CONNS=10

# [OPTIONAL] Maximum connection lifetime in minutes (default: 5)
DB_CONN_MAX_LIFETIME=5

# [OPTIONAL] Maximum idle connection time in minutes (default: 2)
DB_CONN_MAX_IDLE_TIME=2

# -----------------------------------------------------------------------------
# Performance Configuration
# -----------------------------------------------------------------------------

# [OPTIONAL] Directory for temporary files (default: /app/data)
DATA_DIR=/app/data

# [OPTIONAL] Go garbage collector target percentage (default: 100)
# Lower values = more frequent GC, higher memory efficiency
# Recommended: 50 for high-load scenarios
GOGC=50

# -----------------------------------------------------------------------------
# Production Deployment (Docker Swarm / Traefik)
# -----------------------------------------------------------------------------

# [OPTIONAL] Domain for Traefik routing (used in stack.yaml)
DOMAIN=example.com
